# ToxiGuard API 環境変数設定テンプレート
# このファイルを.envにコピーして、実際の値を設定してください

# 外部API設定
USE_EXTERNAL_APIS=False  # True: 外部API使用, False: ローカルモデルのみ
ANTHROPIC_API_KEY=your_claude_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here  # Perspective API用

# データベース設定
DATABASE_URL=postgresql://localhost/toxiguard_db

# その他の設定
TOKENIZERS_PARALLELISM=false
